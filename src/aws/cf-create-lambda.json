{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description": "NFX stack",
  "Resources": {
    "NFXDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "NFX Bucket"
      }
    },
    "NFXRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": { "Service": [ "lambda.amazonaws.com" ] },
            "Action": [ "sts:AssumeRole" ]
          }]
        },
        "Path": "/"
      }
    },
    "NFXRolePolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "cloudwatch-logs-access",
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Action": [
              "logs:CreateLogGroup",
              "logs:CreateLogStream",
              "logs:PutLogEvents"
            ],
            "Resource": "arn:aws:logs:*:*:*"
          }]
        },
        "Roles": [ { "Ref": "NFXRole" } ]
      }
    },
    "NFXLambda": {
      "Type" : "AWS::Lambda::Function",
      "Properties" : {
        "Code" : {
          "S3Bucket" : { "Ref": "NFXDeploymentBucket" },
          "S3Key" : "$S3KEY"
        },
        "Role" : {
          "Fn::GetAtt" : [
            "NFXRole",
            "Arn"
          ]
        }
,
        "Handler" : "handler.hello",
        "Runtime" : "nodejs4.3",
        "Timeout" : "25"
      }
    },
    "NFXLambdaVersion" : {
      "Type" : "AWS::Lambda::Version",
      "Properties" : {
        "FunctionName" : {
          "Fn::GetAtt" : [
            "NFXLambda",
            "Arn"
          ]
        }
      }
    }
  }
}
